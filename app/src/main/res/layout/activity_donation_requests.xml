<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/donationRequestsRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <!-- Centered header for Donation Requests -->
    <TextView
        android:id="@+id/tvDonationRequestsHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Donation Requests"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- ListView to display the donation requests -->
    <ListView
        android:id="@+id/listViewDonationRequests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>