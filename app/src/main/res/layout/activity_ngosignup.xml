<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Header for NGO Signup -->
        <TextView
            android:id="@+id/tvNGOSignupHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NGO Signup - Annapurna Seva"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <!-- NGO Name Input Field -->
        <EditText
            android:id="@+id/etNGOName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="NGO Name"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Government ID Input Field -->
        <EditText
            android:id="@+id/etGovernmentId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Government ID"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Location Input Field -->
        <EditText
            android:id="@+id/etLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Location"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Username Input Field -->
        <EditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Password Input Field -->
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="12dp"
            android:layout_marginBottom="24dp" />

        <!-- Signup Button -->
        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/holo_green_dark"/>

    </LinearLayout>
</ScrollView>